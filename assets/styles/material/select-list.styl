.select-list
  font-size: 1rem
  padding: emCalc(8px) 0
  input
    display: none
  &__item
    font-size: emCalc(14px)
    font-weight: 500
    display: block
    padding: 0 emCalc(16px, 14)
    cursor: pointer
    position: relative
    height: emCalc(48px, 14)
    line-height: emCalc(48px, 14)
    transition: background .2s ease-in-out
    input:checked + &, &:hover, &:focus
      background: rgba(#999, 20%)
    &:active
      background: rgba(#999, 40%)
    &--with-image
      font-size: emCalc(16)
      font-weight: 400
      padding: 0 emCalc(16px)
      height: emCalc(56px)
      line-height: emCalc(56px)
      &:after
        content: ''
        position: absolute
        left: emCalc(72px)
        right: 0
        bottom: 0
        border-top: 1px solid $color-grey-light
    &__image
      vertical-align: middle
      width: emCalc(30px)
    &__text
      margin-left: emCalc(26px)
      vertical-align: middle
    &--rtl
      direction: rtl
  &--rtl
    direction: rtl
  &--rtl &__item__text
    margin-left: 0
    margin-right: emCalc(26px)
