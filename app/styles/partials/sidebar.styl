.sidebar
  font-size: 1rem
  position: absolute
  top: emCalc(10px)
  right: emCalc(60px)
  max-height: 90vh
  z-index: 1
  color: #444
  border: 1px solid #D6D6D6
  background: #fff
  overflow: hidden
  &__filters
    &--rtl
      direction: rtl
      .sidebar__filters__body__filter__text
        margin: 0 emCalc(10px) 0 0
    &__header
      cursor: pointer
      padding: emCalc(10px)
      background: #444
      color: #fff
      &--hide-filters
        .sidebar__filters__header__show
          display: inline
        .sidebar__filters__header__hide
          display: none
      &__show
        display: none
    &__body
      max-height: s('calc(%s - %s)', 90vh, $sidebar-header-height)
      overflow-y: auto
      &--hidden
        display: none
      &__filter
        padding: emCalc(10px)
        cursor: pointer
        &--active
          background: #444
          color: #fff
        &:hover
          background: #444
          color: #fff
        &__image
          vertical-align: middle
          width: emCalc(30px)
        &__text
          margin-left: emCalc(10px)
          vertical-align: middle
